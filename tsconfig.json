{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "blue-design": ["components/index.ts"],
      "blue-design/esm/*": ["components/*"],
      "blue-design/lib/*": ["components/*"]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["components", "global.d.ts"],
  "exclude": ["node_modules"]
}
